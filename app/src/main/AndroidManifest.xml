<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.loaescuela">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera"
        android:required="true"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_l1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_l1_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.LoaEscuela.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>

        <activity
            android:name=".activities.StudentsListActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />

        <activity
            android:name=".activities.RegisterActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />

        <activity
            android:name=".activities.PlanillasActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />

        <activity
            android:name=".activities.AssistsAndIncomesStudentActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />

        <activity
            android:name=".activities.SelectStudentForAssistActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />

        <activity
            android:name=".activities.AssistsResumByDayActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />

        <activity
            android:name=".activities.AssistsCoursesIncomesByStudentActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />

        <activity
            android:name=".activities.ListIncomesDayActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />

        <activity
            android:name=".activities.CreateStudentActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.BoxMovementsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.OutcomesActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.AssistsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />

    </application>

</manifest>