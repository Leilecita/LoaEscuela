<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:drawable="@drawable/listcajas"
        >
        <shape>
            <solid
                android:color="@color/colorAccent" />
            <stroke
                android:width="1px"
                android:color="@color/colorAccent" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:state_pressed="true"
        android:drawable="@drawable/caja_press"
        >
        <shape>
            <solid
                android:color="@color/colorDialogButton" />
            <stroke
                android:width="1px"
                android:color="@color/colorDialogButton" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>