<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/first"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:orientation="vertical"
                    android:id="@+id/line_date"
                    >

                    <TextView
                        android:id="@+id/date_month"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:fontFamily="@font/opensansregular"
                        android:gravity="center_horizontal"
                        android:text="ABR"
                        android:textColor="@color/colorPrimaryDarkLetterRose"

                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/date_day"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/opensansregular"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="21"
                        android:textColor="@color/colorPrimaryDarkLetterRose"
                        android:textSize="12sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"

                    android:layout_gravity="bottom"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="left|top"
                    android:text="Escuela"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:textSize="@dimen/general_text" />


            </LinearLayout>



            <TextView
                android:layout_width="40dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryDarkLetterRose"
                android:fontFamily="@font/opensansregular"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:backgroundTint="@color/colobarra"
                android:layout_marginRight="4dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="right|center_vertical"
                android:gravity="right"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="24dp"
                    android:id="@+id/infobutton"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/circle2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:background="@drawable/circle_student"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/colorPrimaryDarkLetter" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/first"
            android:id="@+id/first2"
            android:layout_height="wrap_content"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:orientation="vertical"
                    >


                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Pack"
                        android:layout_marginLeft="6dp"
                        android:minWidth="20dp"
                        android:fontFamily="@font/opensanslight"
                        android:textSize="@dimen/general_text"
                        android:textColor="@color/colorPrimaryDarkLetterRose"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="40dp"
                android:layout_marginLeft="4dp"
                android:paddingRight="8dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:minWidth="20dp"
                    android:id="@+id/classes_number"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="@dimen/general_text"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="cl"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="@dimen/general_text"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:gravity="right"
                    />

            </LinearLayout>



            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layerType="software"
                android:backgroundTint="@color/colobarra"
                android:layout_marginRight="4dp"
                android:background="@drawable/line_dotted_vertical"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="right"
                android:layout_marginRight="12dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|left"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="6dp"
                    android:text="$"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:textSize="@dimen/general_text" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center_vertical|right"
                    android:minWidth="60dp"
                    android:text=""
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:textSize="@dimen/general_text" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>