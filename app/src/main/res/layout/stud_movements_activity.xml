<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.MainActivity"
    android:background="#F2F3F2">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/line_home"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/home"
                android:src="@drawable/returnn"
                android:layout_marginRight="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:id="@+id/title"
                style="@style/TitleStyle"
                android:text="  Personal"
                />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

 <!--   <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        style="@style/CategoryTab"
        android:layout_weight="0"
        app:tabMaxWidth="0dp"
        tabTextColor="#787878"
        android:layout_width="match_parent"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryDark" />
-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:background="#F2F3F2"
        android:layout_marginRight="2dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:paddingLeft="4dp"
        android:layout_marginBottom="4dp"
        android:scrollbars="horizontal">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/chip_height"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:id="@+id/chip_cat"
            android:background="@drawable/chip_background"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:padding="1dp"
                android:visibility="gone"
                android:alpha="0.8"
               />

            <Spinner
                android:id="@+id/spinner_cat"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:dropDownVerticalOffset="45dp"
                android:paddingLeft="0dp"
                android:spinnerMode="dropdown" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/chip_height"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:id="@+id/chip_sub_cat"
            android:background="@drawable/chip_background"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:padding="1dp"
                android:visibility="gone"
                android:alpha="0.8"
                />

            <Spinner
                android:id="@+id/spinner_sub_cat"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:dropDownVerticalOffset="45dp"
                android:paddingLeft="0dp"
                android:spinnerMode="dropdown" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/chip_height"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:id="@+id/anio"
            android:background="@drawable/chip_background"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <Spinner
                android:id="@+id/spinner_year"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:dropDownVerticalOffset="45dp"
                android:paddingLeft="0dp"
                android:spinnerMode="dropdown" />

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginLeft="14dp"
            android:id="@+id/date"


            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:scrollbars="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunes"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:textSize="@dimen/big_text"
                android:id="@+id/dayname"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:textSize="@dimen/big_text"
                android:layout_height="wrap_content"
                android:text="28"
                android:id="@+id/num"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@color/clearhintletter"
                android:textSize="@dimen/big_text"
                android:layout_height="wrap_content"
                android:text="-"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorPrimaryClearLetter"
                android:textSize="@dimen/big_text"
                android:layout_height="wrap_content"
                android:text="Marzo"
                android:id="@+id/month"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorPrimaryClearLetter"
                android:textSize="@dimen/big_text"
                android:layout_height="wrap_content"
                android:text="2021"
                android:id="@+id/year"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_weight="2"
            android:layout_marginTop="8dp"
            android:id="@+id/asistencia"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:background="@drawable/chip_background"
            android:backgroundTint="@color/colorPrimaryClear"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"

                android:layout_height="50dp"
                android:src="@drawable/assist">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:id="@+id/pagos"
            android:layout_marginLeft="8dp"
            android:background="@drawable/chip_background"
            android:backgroundTint="@color/colorPrimaryClear"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/money_vio">

            </ImageView>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/toolbar"
        android:id="@+id/line_filters"
        >


        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:background="@drawable/rec_find"

            android:clickable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:id="@+id/filters"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"

            android:background="@drawable/chip_background"
            android:backgroundTint="@color/colorPrimaryClear"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/options_white">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="16dp"
            android:visibility="invisible"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:background="@drawable/chip_background"
            android:backgroundTint="@color/colorPrimaryClear"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/options_white">

            </ImageView>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingLeft="6dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/button_rec"
                    android:id="@+id/presentes"
                    android:text="  Presentes  "
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical"

                    />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_rec"
                    android:id="@+id/orderClientBy"
                    android:text="A-B"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/colorPrimaryClear"
                    android:layout_gravity="center_vertical"

                    />




                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/button_rec"
                    android:id="@+id/orderClientByCreated"
                    android:text="FE"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical"

                    />



            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2F3F2"

            >

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/chip_background"
                android:backgroundTint="@color/colorPrimaryClear"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P:  "
                    android:textColor="@color/colorPrimaryDarkLetter"
                    android:textSize="@dimen/big_text"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="20sp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorPrimaryDarkLetter"
                    android:textSize="@dimen/big_text"
                    android:id="@+id/cant_presents"

                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/chip_background"
                android:backgroundTint="@color/colorPrimaryClear"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A:  "
                    android:textColor="@color/colorPrimaryDarkLetter"
                    android:textSize="@dimen/big_text"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="20sp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorPrimaryDarkLetter"
                    android:textSize="@dimen/big_text"
                    android:id="@+id/cant_students_by_planilla"

                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:background="@drawable/bblanco"
                android:backgroundTint="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_margin="30dp"
                android:id="@+id/fab_agregarTod"
                android:layout_alignParentBottom="true"
                android:layout_height="65dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:padding="18dp"
                    android:id="@+id/image_button"
                    android:layout_height="match_parent"
                    android:src="@drawable/add3"
                    />

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>


</LinearLayout>


