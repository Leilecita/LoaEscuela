




<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="40dp"
                android:id="@+id/date"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:text="lun"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDarkLetter"
                    android:id="@+id/day"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:text="3"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:textColor="@color/colorPrimaryDarkLetter"
                    android:id="@+id/number"
                    android:textSize="16sp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:layout_height="@dimen/item_height">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.4"
                        android:text="limpieza"
                        android:paddingLeft="6dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDarkLetterRose"
                        android:id="@+id/type"
                        android:textSize="@dimen/general_text"
                        />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_weight="1.2"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:paddingRight="4dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:fontFamily="@font/opensansregular"
                                android:maxLines="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDarkLetterRose"
                                android:id="@+id/detail"
                                android:textSize="@dimen/general_text"
                                />


                        </LinearLayout>
                    </HorizontalScrollView>


                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layerType="software"
                        android:backgroundTint="@color/colorPrimaryLetterRose"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/line_dotted_vertical"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.7"
                        android:id="@+id/value"
                        android:layout_height="wrap_content"
                        android:text="$1900.0"
                        android:textColor="@color/colorPrimaryLetterRose"
                        android:textSize="@dimen/general_text"
                        android:gravity="right"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/padding_top">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4" />


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_weight="1.2"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingRight="4dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.2"
                                android:text="marx"
                                android:textColor="@color/colorPrimaryLetterRose"
                                android:textSize="@dimen/small_text" />

                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layerType="software"
                        android:backgroundTint="@color/colorPrimaryLetterRose"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/line_dotted_vertical"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>


        <TextView

            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="2dp"
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:background="@drawable/line"

            />

    </LinearLayout>



</LinearLayout>