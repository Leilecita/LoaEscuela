<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="50dp"
            android:id="@+id/home"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/returnn"
                android:id="@+id/returnn"
                android:layout_marginRight="4dp"
                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/title"
            android:fontFamily="@font/opensansregular"
            android:text=" Nuevo alumno"
            android:textSize="@dimen/title_text"
            android:textColor="@color/white"
            />
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/listday"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@color/background">



        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/scrollview"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:layout_marginBottom="6dp"
                android:orientation="vertical"
                android:background="@color/background">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/rec_find"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="6dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/user"
                        android:alpha="0.9"
                        android:padding="1dp"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre"
                            android:textColor="@color/colorPrimaryIntLetter2"
                            android:fontFamily="@font/opensansregular"
                            android:paddingLeft="8dp"
                            android:textSize="@dimen/general_text"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" *"
                            android:textColor="@color/colorPrimaryClearLetter"
                            android:fontFamily="@font/opensansregular"
                            android:paddingRight="4dp"
                            android:textSize="16sp"

                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/line_vertical"
                        />


                    <EditText
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:inputType="textCapWords"
                        android:layout_height="35dp"
                        android:fontFamily="@font/opensansregular"
                        android:background="@drawable/rec_find"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:textColorHint="@color/word_clear"
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/general_text"
                        android:id="@+id/student_name"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/rec_find"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="4dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="35sp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="22sp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="22dp"
                            android:alpha="0.9"
                            android:padding="1dp"
                            android:layout_gravity="center"/>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apellido *"
                            android:textColor="@color/colorPrimaryIntLetter2"
                            android:fontFamily="@font/opensansregular"
                            android:paddingLeft="8dp"
                            android:textSize="@dimen/general_text"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:text=" *"
                            android:textColor="@color/colorPrimaryClearLetter"
                            android:fontFamily="@font/opensansregular"
                            android:paddingRight="4dp"
                            android:textSize="16sp"

                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/line_vertical"
                        />


                    <EditText
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:inputType="textCapWords"
                        android:layout_height="35dp"
                        android:fontFamily="@font/opensansregular"
                        android:background="@drawable/rec_find"
                        android:paddingLeft="8dp"
                        android:text=" "
                        android:layout_gravity="center_vertical"
                        android:textColorHint="@color/word_clear"
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/general_text"
                        android:id="@+id/surname"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="6dp"
                    android:background="@drawable/rec_find"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/date"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Fecha nacimiento *"
                            android:textColor="@color/colorPrimaryIntLetter2"
                            android:fontFamily="@font/opensansregular"
                            android:paddingLeft="8dp"
                            android:textSize="@dimen/general_text"

                            />


                    </LinearLayout>



                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/line_vertical"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:inputType="number"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:text=""
                        android:background="@drawable/rec_find"
                        android:paddingLeft="8dp"
                        android:textColorHint="@color/clearhintletter"
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/general_text"
                        android:id="@+id/fecha_nacimiento"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="6dp"
                    android:background="@drawable/rec_find"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="6dp"
                        android:alpha="0.5"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="DNI *"
                            android:textColor="@color/colorPrimaryIntLetter2"
                            android:fontFamily="@font/opensansregular"
                            android:paddingLeft="8dp"
                            android:textSize="@dimen/general_text"

                            />


                    </LinearLayout>



                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/line_vertical"
                        />


                    <EditText
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:inputType="number"
                        android:layout_height="35dp"
                        android:background="@drawable/rec_find"
                        android:paddingLeft="8dp"
                        android:textColorHint="@color/clearhintletter"
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/general_text"
                        android:id="@+id/dni"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/rec_find"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="6dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:padding="2dp"
                        android:src="@drawable/phonesan"
                        android:alpha="0.9"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teléfono"
                            android:textColor="@color/colorPrimaryIntLetter2"
                            android:fontFamily="@font/opensansregular"
                            android:paddingLeft="8dp"
                            android:textSize="@dimen/general_text"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" *"
                            android:textColor="@color/colorPrimaryClearLetter"
                            android:fontFamily="@font/opensansregular"
                            android:paddingRight="4dp"
                            android:textSize="16sp"

                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/line_vertical"
                        />


                    <EditText
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:layout_height="35dp"
                        android:background="@drawable/rec_find"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:hint="22464203304"
                        android:textColorHint="@color/clearhintletter"
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/general_text"
                        android:id="@+id/phone"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/rec_find"
                    android:paddingLeft="6dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:alpha="0.9"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Categoria"
                            android:textColor="@color/colorPrimaryClearLetter"
                            android:fontFamily="@font/opensansregular"
                            android:paddingLeft="8dp"
                            android:textSize="@dimen/general_text"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/colorPrimaryClearLetter"
                            android:fontFamily="@font/opensansregular"
                            android:paddingRight="4dp"
                            android:textSize="16sp"

                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/line_vertical"
                        />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:inputType="textCapWords"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/opensanslight"
                        android:dropDownVerticalOffset="45dp"
                        android:textColorHint="@color/word_clear"
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/general_text"
                        android:id="@+id/client_category"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="6dp"
                    android:background="@drawable/rec_find"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="6dp"
                        android:alpha="0.5"
                        android:src="@drawable/casa"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Dirección "
                            android:textColor="@color/colorPrimaryClearLetter"
                            android:fontFamily="@font/opensansregular"
                            android:paddingLeft="8dp"
                            android:textSize="@dimen/general_text"

                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/line_vertical"
                        />


                    <EditText
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:inputType="number"
                        android:layout_height="35dp"
                        android:background="@drawable/rec_find"
                        android:paddingLeft="8dp"
                        android:textColorHint="@color/clearhintletter"
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/general_text"
                        android:id="@+id/client_address"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/rec_find"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="6dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:alpha="0.5"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Observación "
                            android:textColor="@color/colorPrimaryClearLetter"
                            android:fontFamily="@font/opensansregular"
                            android:paddingLeft="8dp"
                            android:textSize="@dimen/general_text"
                            />



                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/line_vertical"
                        />

                    <EditText
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:inputType="textCapWords"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rec_find"
                        android:paddingLeft="8dp"
                        android:fontFamily="@font/opensanslight"
                        android:textColorHint="@color/word_clear"
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/general_text"
                        android:id="@+id/client_observation"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/small_text"
                    android:textColor="@color/colorPrimaryClearLetter"
                    android:text="(*) Campos obligatorios"
                    />



            </LinearLayout>



        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="12dp"
            android:background="@drawable/rec_rounded_16"
            android:backgroundTint="@color/colorPrimary"
            android:paddingTop="6dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_margin="16dp"
            android:id="@+id/save"

            android:layout_gravity="right"
            android:paddingBottom="6dp"
            android:paddingRight="12dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="22dp"
                android:layout_gravity="center_vertical"
                android:layout_height="22dp"
                android:src="@drawable/save"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:paddingLeft="8dp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensansregular"
                android:textSize="18sp"
                />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>