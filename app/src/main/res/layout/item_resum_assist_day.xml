<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:orientation="horizontal"
            android:background="#F3D9E5"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/general_text"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/colorPrimaryLetterRose"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text"
                android:text=""
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/colorPrimaryLetterRose"
                android:layout_height="match_parent"
                />



            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/general_text"

                android:paddingLeft="6dp"
                android:text="10"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryLetterRose"
                android:layout_height="match_parent"
                android:id="@+id/day"
                />


            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/general_text"
                android:paddingLeft="6dp"
                android:id="@+id/year"
                android:text="2020"
                android:fontFamily="@font/opensansregular"
                android:layout_gravity="center_vertical"
                android:textAllCaps="true"

                android:textColor="@color/colorPrimaryLetterRose"
                android:layout_height="match_parent"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/nombre_planilla"
                android:layout_width="match_parent"
                android:layout_weight="1.8"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryLetterRose"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"
                android:fontFamily="@font/opensansregular"
                android:layout_marginLeft="8dp"
                android:text="Pagos escuela"
                android:textSize="@dimen/general_text" />

            <TextView
                android:id="@+id/incomes_escuela"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:textColor="@color/colorPrimaryLetterRose"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/opensansregular"
                android:text=""
                android:textSize="@dimen/general_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/line_tot_formatos"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.8"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryLetterRose"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"
                android:fontFamily="@font/opensansregular"
                android:layout_marginLeft="8dp"
                android:text="Pagos colonia y high"
                android:textSize="@dimen/general_text" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/down"
                    android:layout_height="wrap_content"
                    ></ImageView>
                <TextView
                    android:id="@+id/incomes_col_y_high"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/opensansregular"
                    android:text=""
                    android:textSize="@dimen/general_text" />

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/line_detail_formatos"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="8dp"
                    android:text="Pagos colonia"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:id="@+id/incomes_colonia"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="16dp"
                    android:text="80"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="8dp"
                    android:text="Pagos high"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:id="@+id/incomes_highschool"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="16dp"
                    android:text="80"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >


            <TextView
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="total $  "
                android:textColor="@color/colorPrimaryLetterRose"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/general_text"
                android:layout_width="wrap_content" />


            <TextView
                android:id="@+id/tot_incomes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryLetterRose"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text=""
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/general_text" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:layout_below="@id/first2"
            android:layout_gravity="center_vertical"
            android:background="@drawable/line"
            android:backgroundTint="@color/colorPrimaryLetterRose"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.8"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryLetterRose"
                android:layout_gravity="center_vertical|right"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical|right"
                android:text="Presentes"
                android:textSize="@dimen/general_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:textColor="@color/colorPrimaryLetterRose"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="16dp"
                android:text=""
                android:textSize="@dimen/medium_text" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
          >


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/list_planillas"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/opensansregular"
                    android:text="total"
                    android:textSize="@dimen/general_text" />


                <TextView
                    android:id="@+id/tot_presents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text=""
                    android:textSize="@dimen/general_text" />

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

</LinearLayout>

