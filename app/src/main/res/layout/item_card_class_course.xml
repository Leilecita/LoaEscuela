<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/violet3"
    android:id="@+id/content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/infotop"
        android:layout_height="70dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.56"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/line_date"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/date_month"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:fontFamily="@font/opensanslight"
                android:gravity="center_horizontal"
                android:text="ABR"
                android:textColor="@color/colorPrimaryDark"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_day"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/opensanslight"
                android:gravity="center_horizontal"
                android:paddingTop="22dp"
                android:text="21"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2.5"
            android:layout_gravity="center_vertical"
            android:gravity="center"

            android:layout_height="wrap_content">
         <!--   <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/image_school"
                android:gravity="center"

                android:text="Escuela"
                android:fontFamily="@font/opensanslight"
                android:textColor="@color/word"
                /> -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/big_text"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/category"
                android:text=""
                android:minWidth="65dp"
                android:gravity="right|center_vertical"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensanslight"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2.2"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="15"
                android:minWidth="20dp"
                android:id="@+id/classes_number"
                android:fontFamily="@font/opensanslight"
                android:textSize="@dimen/big_text"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="right"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text=" cl"
                android:minWidth="20dp"
                android:fontFamily="@font/opensanslight"
                android:textSize="@dimen/big_text"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="right"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="7dp"
                android:layout_gravity="center"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/big_text"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/paid_amount"
                android:text="1000"

                android:minWidth="65dp"
                android:gravity="right|center_vertical"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensanslight"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/big_text"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"
                android:text=" / "
                android:fontFamily="@font/opensanslight"
                />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensanslight"
                android:gravity="center_vertical"
                android:minWidth="80dp"
                android:text="1000"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/big_text" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2.7"
            android:id="@+id/infobutton"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/circle2"
                android:layout_width="14dp"
                android:layout_height="14dp"

                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/circle_student"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorPrimaryDarkLetter" />
        </LinearLayout>





    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infotop"
        android:id="@+id/info"
        android:visibility="gone"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/line_classes"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/big_text"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Clases"
                    android:fontFamily="@font/opensanslight"
                    />


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/list_classes"
                    android:layout_height="wrap_content"/>
            </LinearLayout>




        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/div1"
            android:layout_below="@id/line_classes"
            style="@style/DivisorCategoryStyle"
            android:textColor="@color/color_line_div"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/lin_incomes"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/div1"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/big_text"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Pagos"
                    android:fontFamily="@font/opensanslight"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/list_incomes"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">



                </LinearLayout>



            </LinearLayout>




            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:id="@+id/list_incomes_info"
                android:layout_height="wrap_content"/>



        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_below="@id/info"
        style="@style/DivisorCategoryStyle"
        android:textColor="@color/word_clear"/>

</RelativeLayout>
