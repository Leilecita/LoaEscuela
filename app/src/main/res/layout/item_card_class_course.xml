<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/student_padding_top"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:paddingBottom="3dp"
    android:background="@drawable/rec_rounded_8"
    android:id="@+id/content"
    android:layout_height="wrap_content" >



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/firstlin"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="40dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical"
                    android:id="@+id/line_date"
                    >

                    <TextView
                        android:id="@+id/date_month"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:fontFamily="@font/opensansregular"
                        android:gravity="center_horizontal"
                        android:text="ABR"
                        android:textColor="@color/colorPrimaryDarkLetterRose"

                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/date_day"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/opensansregular"
                        android:gravity="center_horizontal"
                        android:paddingTop="11dp"
                        android:text="21"
                        android:textColor="@color/colorPrimaryDarkLetterRose"
                        android:textSize="15sp" />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="bottom"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="left|top"
                    android:text="Escuela"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:textSize="@dimen/small_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Pack"
                        android:minWidth="20dp"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="@dimen/small_text"
                        android:textColor="@color/colorPrimaryLetterRose"
                        android:gravity="center"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="4dp"
                        android:paddingRight="8dp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:minWidth="20dp"
                            android:id="@+id/classes_number"
                            android:fontFamily="@font/opensansregular"
                            android:textSize="@dimen/small_text"
                            android:textColor="@color/colorPrimaryLetterRose"
                            android:gravity="right"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:text="cl"
                            android:fontFamily="@font/opensansregular"
                            android:textSize="@dimen/general_text"
                            android:textColor="@color/colorPrimaryLetterRose"
                            android:gravity="right"
                            />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>




            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="18dp"
                android:layerType="software"
                android:backgroundTint="@color/colorPrimaryLetterRose"
                android:layout_marginRight="4dp"
                android:background="@drawable/line_dotted_vertical"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.5"
                    android:layout_gravity="right|top"
                    android:gravity="right|top"
                    android:layout_marginRight="8dp"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="24dp"
                        android:id="@+id/infobutton"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/circle2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="@drawable/circle_student"
                            android:gravity="top"
                            android:text=""
                            android:textColor="@color/colorPrimaryDarkLetter" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.5"
                    android:layout_gravity="right"
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|left"
                        android:layout_weight="1"
                        android:fontFamily="@font/opensansregular"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="6dp"
                        android:text="$"
                        android:textColor="@color/colorPrimaryLetterRose"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/opensansregular"
                        android:gravity="center_vertical|right"
                        android:minWidth="60dp"
                        android:text=""
                        android:textColor="@color/colorPrimaryLetterRose"
                        android:textSize="@dimen/small_text" />


                </LinearLayout>

            </LinearLayout>








        </LinearLayout>







        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:layout_below="@id/first2"
            android:layout_gravity="center_vertical"
            android:background="@drawable/line"
            android:backgroundTint="@color/colorPrimaryLetterRose"
            android:layout_height="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="40dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryDarkLetterRose"
                android:fontFamily="@font/opensansregular"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="total abonado"
                android:paddingRight="8dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical|right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryLetterRose"
                android:fontFamily="@font/opensansregular"
                android:layout_height="wrap_content">

            </TextView>



            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layerType="software"
                android:backgroundTint="@color/colorPrimaryLetterRose"
                android:layout_marginRight="4dp"
                android:background="@drawable/line_dotted_vertical"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="6dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|left"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center_vertical|left"
                    android:text="$"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:textSize="@dimen/general_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/paid_amount"
                    android:text=""
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:fontFamily="@font/opensansregular"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="40dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryDarkLetterRose"
                android:fontFamily="@font/opensansregular"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="total deuda"
                android:layout_marginTop="2dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical|right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryLetterRose"
                android:fontFamily="@font/opensansregular"
                android:layout_height="wrap_content">

            </TextView>



            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layerType="software"
                android:backgroundTint="@color/colorPrimaryLetterRose"
                android:layout_marginRight="4dp"
                android:background="@drawable/line_dotted_vertical"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:layout_marginTop="2dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="12dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="6dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center_vertical|left"
                    android:text="$"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:textSize="@dimen/general_text" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/debt_amount"
                    android:text=""
                    android:gravity="right"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:fontFamily="@font/opensansregular"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_below="@id/firstlin"
        android:id="@+id/infotop"
        android:layout_height="wrap_content">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infotop"
        android:id="@+id/info"
        android:visibility="gone"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/line_classes"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/big_text"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Clases"
                    android:fontFamily="@font/opensanslight"
                    />


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/list_classes"
                    android:layout_height="wrap_content"/>
            </LinearLayout>




        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/lin_incomes"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensansregular"
                android:layout_marginLeft="30dp"
                android:gravity="left|center_vertical"

                android:text="historial pagos"
                android:textColor="@color/colorPrimaryLetterRose"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"

                android:layout_height="wrap_content">


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/list_incomes"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">



                </LinearLayout>



            </LinearLayout>




            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:id="@+id/list_incomes_info"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/lin_incomes"
            android:layout_height="wrap_content"
            android:id="@+id/complete_pack"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/rec_rounded_8"
            android:backgroundTint="@color/colorbuttonclear"
            >


            <TextView
                android:layout_width="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="6dp"
                android:textColor="@color/colorPrimaryLetterRose"
                android:paddingTop="6dp"
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/general_text"
                android:layout_height="wrap_content"
                android:text="completar pack"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/lin_incomes"
            android:layout_height="wrap_content"
            android:id="@+id/load_income"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/rec_rounded_8"
            android:backgroundTint="@color/colorbutton"
            >


            <TextView
                android:layout_width="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="6dp"
                android:textColor="@color/white"
                android:paddingTop="6dp"
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/general_text"
                android:layout_height="wrap_content"
                android:text="$ cargar pago"
                />

        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>
