<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/student_padding_top"
    android:layout_margin="4dp"
    android:paddingBottom="@dimen/student_padding_bottom"
    android:background="@drawable/rec_rounded_8"
    android:id="@+id/content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/infotop"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.7"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/line_date"
            >

            <TextView
                android:id="@+id/date_month"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:fontFamily="@font/opensanslight"
                android:gravity="center_horizontal"
                android:text="ABR"
                android:textColor="@color/colorPrimaryDark"

                android:textSize="13sp" />

            <TextView
                android:id="@+id/date_day"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/opensanslight"
                android:gravity="center_horizontal"
                android:paddingTop="14dp"
                android:text="21"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensanslight"
                android:gravity="left|center_vertical"
                android:text="Highschool"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/big_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2.5"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="20"
                android:minWidth="20dp"
                android:id="@+id/classes_number"
                android:fontFamily="@font/opensanslight"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="right"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text=" cl"
                android:minWidth="20dp"
                android:fontFamily="@font/opensanslight"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="right"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/paid_amount"
                android:text="10000"

                android:minWidth="55dp"
                android:gravity="right|center_vertical"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensansregular"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"
                android:text=" / "
                android:fontFamily="@font/opensansregular"
                />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:minWidth="60dp"
                android:text="100000"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/medium_text" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:id="@+id/infobutton"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/circle2"
                android:layout_width="14dp"
                android:layout_height="14dp"

                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/circle_student"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorPrimaryDarkLetter" />
        </LinearLayout>





    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infotop"
        android:id="@+id/info"
        android:visibility="gone"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/line_classes"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/big_text"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Clases"
                    android:fontFamily="@font/opensanslight"
                    />


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/list_classes"
                    android:layout_height="wrap_content"/>
            </LinearLayout>




        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/lin_incomes"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensanslight"
                android:layout_marginLeft="22dp"
                android:gravity="left|center_vertical"
                android:text="historial pagos"
                android:textColor="@color/violet1"
                android:textSize="@dimen/general_text"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"

                android:layout_height="wrap_content">


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/list_incomes"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">



                </LinearLayout>



            </LinearLayout>




            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:id="@+id/list_incomes_info"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/lin_incomes"
            android:layout_height="wrap_content"
            android:id="@+id/complete_pack"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/rec_rounded_8"
            android:backgroundTint="@color/violet3"
            >


            <TextView
                android:layout_width="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="6dp"
                android:textColor="@color/colorPrimaryIntLetter2"
                android:paddingTop="6dp"
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/general_text"
                android:layout_height="wrap_content"
                android:text="completar pack"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/lin_incomes"
            android:layout_height="wrap_content"
            android:id="@+id/load_income"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/rec_rounded_8"
            android:backgroundTint="@color/colorPrimaryClearLetter"
            >


            <TextView
                android:layout_width="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="6dp"
                android:textColor="@color/white"
                android:paddingTop="6dp"
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/general_text"
                android:layout_height="wrap_content"
                android:text="$ cargar pago"
                />

        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>
