<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="temporada"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/anio"
                    android:layout_width="match_parent"
                    android:layout_weight="1.3"
                    android:fontFamily="@font/opensansregular"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="2023-2024"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="categoría"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/categoria"
                    android:layout_width="match_parent"
                    android:layout_weight="1.3"
                    android:fontFamily="@font/opensansregular"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="Escuela"
                    android:textSize="16sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="sub categoría"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/subcategoria"
                    android:layout_width="match_parent"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/opensansregular"
                    android:text="Intermedios"
                    android:textSize="16sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/clearhintletter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="creada"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clearhintletter"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/opensansregular"
                    android:text="2022-12-12-"
                    android:textSize="15sp" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

