<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/peek_height" >

    <TextView
        android:layout_width="30dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_horizontal"
        style="@style/DivisorCategoryStyle"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rec_find"
        android:backgroundTint="@color/background_bottom_shet"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lineFilter"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/hsv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/escuelaFilter"
                        android:layout_marginLeft="8dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="40dp"
                            android:background="@drawable/bblanco"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:orientation="vertical"
                            android:backgroundTint="@color/santi"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:text="E"
                                android:layout_gravity="center"
                                android:textColor="#fff"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:layout_height="match_parent" />

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="escuela"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/highschoolFilter"
                        android:layout_marginLeft="8dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="40dp"
                            android:background="@drawable/bblanco"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"

                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:backgroundTint="@color/pers"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:text="H"
                                android:layout_gravity="center"
                                android:textColor="#fff"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:layout_height="match_parent" />

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="highschool"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/coloniaFilter"
                        android:layout_marginLeft="8dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="40dp"
                            android:background="@drawable/bblanco"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:orientation="vertical"
                            android:backgroundTint="@color/local"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="C"
                                android:textColor="#fff"
                                android:textSize="18sp" />

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="colonia"
                            />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_marginLeft="12dp"

                        android:layout_marginRight="8dp"
                        android:id="@+id/all"
                        android:orientation="vertical"
                        android:background="@drawable/ball"
                        android:layout_height="40dp">

                    </LinearLayout>


                </LinearLayout>


            </HorizontalScrollView>



        </LinearLayout>
    </LinearLayout>




</LinearLayout>