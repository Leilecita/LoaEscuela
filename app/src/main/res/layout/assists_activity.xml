<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listado">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="#F2F3F2"
            android:layout_marginRight="2dp"
            android:orientation="horizontal"
            android:padding="4dp"
            android:visibility="gone"
            android:paddingLeft="4dp"
            android:layout_marginBottom="4dp"
            android:scrollbars="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chip_height"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="2dp"
                android:id="@+id/chip_cat"
                android:background="@drawable/chip_background"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:padding="1dp"
                    android:visibility="gone"
                    android:alpha="0.8"
                    />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:dropDownVerticalOffset="45dp"
                    android:paddingLeft="0dp"
                    android:spinnerMode="dropdown" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chip_height"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="2dp"
                android:id="@+id/chip_sub_cat"
                android:background="@drawable/chip_background"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:padding="1dp"
                    android:visibility="gone"
                    android:alpha="0.8"
                    />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:dropDownVerticalOffset="45dp"
                    android:paddingLeft="0dp"
                    android:spinnerMode="dropdown" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chip_height"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="2dp"
                android:id="@+id/anio"
                android:background="@drawable/chip_background"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <Spinner
                    android:id="@+id/spinner_year"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:dropDownVerticalOffset="45dp"
                    android:paddingLeft="0dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>



        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/toolbar"
        android:id="@+id/line_filters"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:id="@+id/filters"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"

            android:background="@drawable/chip_background"
            android:backgroundTint="@color/colorPrimaryClear"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/options_white">

            </ImageView>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingLeft="6dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/button_rec"
                    android:id="@+id/presentes"
                    android:text="  Presentes  "
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical"

                    />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_rec"
                    android:id="@+id/orderClientBy"
                    android:text="A-B"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/colorPrimaryClear"
                    android:layout_gravity="center_vertical"

                    />




                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/button_rec"
                    android:id="@+id/orderClientByCreated"
                    android:text="FE"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical"

                    />



            </LinearLayout>
        </HorizontalScrollView>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_students"
                    android:layout_width="match_parent"
                    android:clipToPadding="false"
                    android:paddingBottom="50dp"
                    android:layout_height="match_parent"
                    />



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="16dp"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    android:layout_marginBottom="36dp"
                    android:background="@drawable/chip_background"
                    android:backgroundTint="@color/colorPrimaryClear"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P."
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/big_text"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:minWidth="20sp"
                        android:paddingLeft="6dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/big_text"
                        android:id="@+id/cant_presents"

                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/chip_background"
                    android:backgroundTint="@color/colorPrimaryClear"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A:  "
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/big_text"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:minWidth="20sp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/big_text"
                        android:id="@+id/cant_students_by_planilla"

                        />




                </LinearLayout>


            </RelativeLayout>

        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="80dp"
            android:id="@+id/empty"
            android:text="No ha seleccionado ninguna planilla"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>

    <!-- Bottom Sheet -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>


