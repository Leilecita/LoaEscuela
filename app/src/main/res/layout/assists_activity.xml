<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/listado">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/fondoasist"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/line_home"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/home"
                    android:src="@drawable/returnn"
                    android:layout_marginRight="4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/title"
                    style="@style/TitleStyle"
                    android:text="  Personal"
                    />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="22dp"
            android:id="@+id/line_top_info"
            android:layout_marginRight="22dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/rec_rounded_8"

                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_cat"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:dropDownVerticalOffset="45dp"
                    android:paddingLeft="0dp"
                    android:spinnerMode="dropdown" />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layerType="software"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/line_vertical"
                    />




                <Spinner
                    android:id="@+id/spinner_sub_cat"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:dropDownVerticalOffset="45dp"
                    android:paddingLeft="0dp"
                    android:spinnerMode="dropdown" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginRight="16dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="48dp"
                        android:id="@+id/date_picker"
                        android:layout_gravity="center"

                        android:background="@drawable/bblanco"

                        android:backgroundTint="@color/colorPrimaryClear"
                        android:gravity ="center|left"
                        android:paddingTop="2dp"
                        android:layout_height="48dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="LUN"
                            android:id="@+id/dayname"
                            android:textColor="@color/colorPrimaryDarkLetter"
                            android:textAllCaps="true"
                            android:fontFamily="sans-serif"
                            android:textSize="15sp"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/num"
                            android:text="12"
                            android:paddingTop="16sp"
                            android:textColor="@color/colorPrimaryDarkLetter"
                            android:textSize="21sp"
                            android:gravity="center_horizontal"
                            android:fontFamily="sans-serif"
                            android:layout_gravity="center"

                            />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/date"
                    android:layout_gravity="center"
                    android:background="@drawable/rec_find"
                    android:layout_height="40dp"
                    >

                    <TextView
                        android:id="@+id/month"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="12dp"
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="wrap_content"
                        android:text="ENERO"
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="17sp"
                        android:inputType="textCapWords" />

                    <TextView
                        android:id="@+id/year"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="4dp"
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="wrap_content"
                        android:text="2023"
                        android:textColor="@color/colorPrimaryDarkLetter"

                        android:textSize="17sp"
                        android:inputType="textCapWords" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/cal"
                        android:layout_gravity="center"
                        android:layout_marginRight="8dp"
                        />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"

                >


                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_weight="2"
                    android:layout_marginTop="8dp"
                    android:id="@+id/asistencia"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:background="@drawable/chip_background"
                    android:backgroundTint="@color/colorPrimaryClear"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"

                        android:layout_height="50dp"
                        android:src="@drawable/assist">

                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:id="@+id/pagos"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/chip_background"
                    android:backgroundTint="@color/colorPrimaryClear"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:src="@drawable/money_vio">

                    </ImageView>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="#F2F3F2"
            android:layout_marginRight="2dp"
            android:orientation="horizontal"
            android:padding="4dp"
            android:visibility="gone"
            android:paddingLeft="4dp"
            android:layout_marginBottom="4dp"
            android:scrollbars="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chip_height"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="2dp"
                android:id="@+id/chip_cat"
                android:background="@drawable/chip_background"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:padding="1dp"
                    android:visibility="gone"
                    android:alpha="0.8"
                    />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:dropDownVerticalOffset="45dp"
                    android:paddingLeft="0dp"
                    android:spinnerMode="dropdown" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chip_height"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="2dp"
                android:id="@+id/chip_sub_cat"
                android:background="@drawable/chip_background"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:padding="1dp"
                    android:visibility="gone"
                    android:alpha="0.8"
                    />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:dropDownVerticalOffset="45dp"
                    android:paddingLeft="0dp"
                    android:spinnerMode="dropdown" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chip_height"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="2dp"
                android:id="@+id/anio"
                android:background="@drawable/chip_background"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <Spinner
                    android:id="@+id/spinner_year"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:dropDownVerticalOffset="45dp"
                    android:paddingLeft="0dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>



        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/toolbar"
        android:id="@+id/line_filters"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:id="@+id/filters"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"

            android:background="@drawable/chip_background"
            android:backgroundTint="@color/colorPrimaryClear"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/options_white">

            </ImageView>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingLeft="6dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/button_rec"
                    android:id="@+id/presentes"
                    android:text="  Presentes  "
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical"

                    />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_rec"
                    android:id="@+id/orderClientBy"
                    android:text="A-B"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/colorPrimaryClear"
                    android:layout_gravity="center_vertical"

                    />




                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/button_rec"
                    android:id="@+id/orderClientByCreated"
                    android:text="FE"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical"

                    />



            </LinearLayout>
        </HorizontalScrollView>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_students"
                    android:layout_width="match_parent"
                    android:clipToPadding="false"
                    android:paddingBottom="50dp"
                    android:layout_height="match_parent"
                    />

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/rec_find"
                    android:layout_alignParentBottom="true"
                    android:clickable="true" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_margin="16dp"
                    android:layout_above="@id/searchView"
                    android:background="@drawable/chip_background"
                    android:backgroundTint="@color/colorPrimaryClear"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P."
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/big_text"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:minWidth="20sp"
                        android:paddingLeft="6dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/big_text"
                        android:id="@+id/cant_presents"

                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/chip_background"
                    android:backgroundTint="@color/colorPrimaryClear"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A:  "
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/big_text"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:minWidth="20sp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorPrimaryDarkLetter"
                        android:textSize="@dimen/big_text"
                        android:id="@+id/cant_students_by_planilla"

                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:background="@drawable/bblanco"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="45dp"
                    android:id="@+id/fab_agregarTod"
                    android:layout_alignParentBottom="true"
                    android:layout_height="65dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/image_button"
                        android:layout_gravity="center"
                        android:padding="4dp"

                        android:layout_height="match_parent"
                        android:src="@drawable/addstudent"
                        />

                </LinearLayout>

            </RelativeLayout>

        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="80dp"
            android:id="@+id/empty"
            android:text="No ha seleccionado ninguna planilla"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>
    <!-- Bottom Sheet -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>


