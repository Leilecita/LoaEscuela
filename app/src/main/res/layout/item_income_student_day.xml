<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:visibility="gone"
                android:fontFamily="@font/opensanslight"
                android:gravity="center"
                android:text="11:00"
                android:textSize="@dimen/general_text"
                android:textColor="@color/colorPrimaryDarkLetter"
                 />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/opensansregular"
                    android:id="@+id/student_name"
                    android:text="Leila"
                    android:textSize="@dimen/general_text"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:id="@+id/surname"
                    android:text="del campo"
                    android:textSize="15sp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:layout_gravity="center_vertical"
                android:paddingBottom="2dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/detail"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="inscripcion"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:textSize="@dimen/small_text"
                    android:gravity="center"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/detail2"
                    android:fontFamily="@font/opensanslight"
                    android:text="higschool"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:textSize="@dimen/small_text" />
            </LinearLayout>



            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layerType="software"
                android:backgroundTint="@color/colorPrimaryLetterRose"
                android:layout_marginRight="4dp"
                android:background="@drawable/line_dotted_vertical"
                />







            <LinearLayout
                android:layout_width="90dp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="20dp"

                    android:layout_gravity="left|center_vertical"
                    android:id="@+id/card"

                    android:visibility="gone"
                    android:alpha="0.7"
                    android:layout_marginLeft="4dp"
                    android:layout_height="18dp"
                    android:src="@drawable/cardlogo"

                    app:tint="@color/colorPrimaryLetterRose" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="2dp"

                    android:paddingBottom="2dp"
                    android:layout_gravity="center_vertical|right"
                    android:id="@+id/amount"
                    android:layout_height="wrap_content"
                    android:text="900000"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:textSize="@dimen/small_text"
                    android:gravity="right"

                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/line_detail_text"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="center"
                android:fontFamily="@font/opensanslight"
                android:paddingRight="8dp"
                android:text=""
                android:textColor="@color/colorPrimaryDarkLetter"
                android:textSize="@dimen/general_text" />



        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@drawable/line"
            android:backgroundTint="@color/colorbutton"
            android:layout_height="2dp"/>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/line_payment"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:visibility="gone">


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="right"
                android:id="@+id/textpayment"
                android:fontFamily="@font/opensanslight"
                android:paddingRight="8dp"
                android:text="Pago completa"
                android:textColor="@color/colorPrimaryClear"
                android:textSize="@dimen/general_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensansregular"
                android:text="Â·"
                android:textColor="@color/word"
                android:textSize="@dimen/general_text" />


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/valpayment"
                android:fontFamily="@font/opensanslight"
                android:paddingLeft="8dp"
                android:text="2000 / 4000"
                android:textColor="@color/word"
                android:textSize="@dimen/general_text" />


        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_events"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:gravity="right">

            <LinearLayout
                android:id="@+id/line_detail"
                android:layout_width="120dp"
                android:visibility="gone"
                android:layout_height="40dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center"
                    android:text="+ Detalle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/general_text" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

