<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.9"
                android:fontFamily="@font/opensanslight"
                android:gravity="center"
                android:text="11:00"
                android:textColor="@color/word"
                android:textSize="@dimen/big_text" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.8"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensanslight"
                    android:gravity="center"
                    android:text="Escuela"
                    android:textColor="@color/word" />


            </LinearLayout>

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:fontFamily="@font/opensansregular"
                android:paddingLeft="40dp"
                android:text="Alquiler"
                android:textColor="@color/word"
                android:textSize="@dimen/general_text"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:paddingRight="2dp">

                <TextView
                    android:id="@+id/student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensanslight"
                    android:paddingLeft="10dp"

                    android:text="Leila del campoas"
                    android:textColor="@color/word"
                    android:textSize="@dimen/big_text" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"

                android:layout_weight="2.1"
                android:gravity="right"
                android:paddingTop="2dp">


                <TextView
                    android:id="@+id/circle_pendient"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1.8">

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/opensanslight"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/word"
                    android:textSize="@dimen/big_text" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/line_payment"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:visibility="gone">


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="right"
                android:id="@+id/textpayment"
                android:fontFamily="@font/opensanslight"
                android:paddingRight="8dp"
                android:text="Pago completa"
                android:textColor="@color/colorPrimaryClear"
                android:textSize="@dimen/general_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensansregular"
                android:text="Â·"
                android:textColor="@color/word"
                android:textSize="@dimen/general_text" />


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/valpayment"
                android:fontFamily="@font/opensanslight"
                android:paddingLeft="8dp"
                android:text="2000 / 4000"
                android:textColor="@color/word"
                android:textSize="@dimen/general_text" />


        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_events"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:gravity="right">

            <LinearLayout
                android:id="@+id/line_detail"
                android:layout_width="120dp"
                android:visibility="gone"
                android:layout_height="40dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center"
                    android:text="+ Detalle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/general_text" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

