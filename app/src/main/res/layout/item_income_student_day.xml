<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:visibility="gone"
                android:fontFamily="@font/opensanslight"
                android:gravity="center"
                android:text="11:00"
                android:textSize="@dimen/general_text"
                android:textColor="@color/colorPrimaryDarkLetter"
                 />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.6"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/opensansregular"
                    android:id="@+id/student_name"
                    android:text="Leila"
                    android:textSize="@dimen/general_text"
                    android:textColor="@color/colorPrimaryIntLetter"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryIntLetter"
                    android:id="@+id/surname"
                    android:text="del campo"
                    android:textSize="16sp"
                    android:gravity="right"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="110dp"
                android:id="@+id/detail"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:lines="2"
                android:fontFamily="@font/opensanslight"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:textSize="@dimen/general_text"
                android:gravity="left"

                />



            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.9"
                android:id="@+id/amount"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="900000"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/colorPrimaryDarkLetter"
                android:textSize="@dimen/general_text"
                android:gravity="right"

                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/line_detail_text"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="center"
                android:id="@+id/detail2"
                android:fontFamily="@font/opensanslight"
                android:paddingRight="8dp"
                android:text=""
                android:hint="Sin detalle"
                android:textColor="@color/word"
                android:textSize="@dimen/big_text" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/line_payment"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:visibility="gone">


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="right"
                android:id="@+id/textpayment"
                android:fontFamily="@font/opensanslight"
                android:paddingRight="8dp"
                android:text="Pago completa"
                android:textColor="@color/colorPrimaryClear"
                android:textSize="@dimen/general_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensansregular"
                android:text="Â·"
                android:textColor="@color/word"
                android:textSize="@dimen/general_text" />


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/valpayment"
                android:fontFamily="@font/opensanslight"
                android:paddingLeft="8dp"
                android:text="2000 / 4000"
                android:textColor="@color/word"
                android:textSize="@dimen/general_text" />


        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_events"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:gravity="right">

            <LinearLayout
                android:id="@+id/line_detail"
                android:layout_width="120dp"
                android:visibility="gone"
                android:layout_height="40dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center"
                    android:text="+ Detalle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/general_text" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

