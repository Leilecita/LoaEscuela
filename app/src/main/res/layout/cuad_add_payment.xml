<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="28dp"
    android:paddingTop="10dp"
    android:background="@drawable/rec_dialog"
    android:paddingRight="28dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pago a cuenta"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDarkLetterRose"
            android:gravity="center"
            android:fontFamily="@font/opensansregular"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center|left"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="42dp"
                    android:id="@+id/date_picker"
                    android:layout_gravity="center"

                    android:background="@drawable/bblanco"

                    android:backgroundTint="#F6EFF3"
                    android:gravity ="center|left"
                    android:paddingTop="2dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="LUN"
                        android:id="@+id/dayname"
                        android:textColor="@color/colorPrimaryDarkLetterRose"
                        android:textAllCaps="true"
                        android:fontFamily="@font/opensanslight"
                        android:textSize="14sp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/num"
                        android:text="12"
                        android:paddingTop="12sp"
                        android:textColor="@color/colorPrimaryDarkLetterRose"
                        android:textSize="18sp"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/opensansregular"
                        android:layout_gravity="center"

                        />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/date"
                android:layout_gravity="center"
                android:backgroundTint="@color/background_rec_inpu"
                android:background="@drawable/rec_find"
                android:layout_height="@dimen/height_rec_cuad_input"
                >

                <TextView
                    android:id="@+id/month"
                    android:layout_height="@dimen/height_rec_cuad_input"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="12dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="wrap_content"
                    android:text="ENERO"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:textSize="17sp"
                    android:inputType="textCapWords" />

                <TextView
                    android:id="@+id/year"
                    android:layout_height="@dimen/height_rec_cuad_input"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="wrap_content"
                    android:text="2023"
                    android:textColor="@color/colorPrimaryDarkLetterRose"

                    android:textSize="17sp"
                    android:inputType="textCapWords" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cal"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    />

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/word"
                android:visibility="gone"
                android:id="@+id/pack"
                android:fontFamily="@font/opensanslight"
                android:text="Pack 10 cl"
                android:textSize="22sp"
                android:layout_marginBottom="4dp"
                />


        </LinearLayout>





        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2.5"
                android:text="Pagado "
                android:textColor="@color/colorPrimaryDarkLetterRose"
                android:gravity="center_vertical"
                android:fontFamily="@font/opensanslight"
                android:textSize="@dimen/general_text"
                android:layout_height="@dimen/height_rec_cuad_input"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="$"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensanslight"
                    android:textSize="@dimen/general_text"
                    android:layout_height="@dimen/height_rec_cuad_input"

                    />

                <TextView
                    android:id="@+id/payed"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/height_rec_cuad_input"
                    android:layout_gravity="center_vertical|right"
                    android:fontFamily="@font/opensanslight"
                    android:gravity="center_vertical|right"
                    android:text="100"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:textSize="@dimen/general_text"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:text=" / "
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensanslight"
                    android:textSize="@dimen/general_text"
                    android:layout_height="@dimen/height_rec_cuad_input"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="$"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensanslight"
                    android:textSize="@dimen/general_text"
                    android:layout_height="@dimen/height_rec_cuad_input"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:text="90000"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:id="@+id/pack_value"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensanslight"
                    android:textSize="@dimen/general_text"
                    android:layout_height="@dimen/height_rec_cuad_input"

                    />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2.5"
                android:text="Restan "

                android:textColor="@color/colorPrimaryDarkLetterRose"
                android:gravity="center_vertical"
                android:fontFamily="@font/opensanslight"
                android:textSize="@dimen/general_text"
                android:layout_height="@dimen/height_rec_cuad_input"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="$"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensanslight"
                    android:textSize="@dimen/general_text"
                    android:layout_height="@dimen/height_rec_cuad_input"

                    />

                <TextView
                    android:id="@+id/rest"

                    android:layout_width="80dp"
                    android:layout_height="@dimen/height_rec_cuad_input"
                    android:layout_gravity="center_vertical|right"
                    android:fontFamily="@font/opensanslight"
                    android:gravity="right|center_vertical"
                    android:text="8000"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:textSize="@dimen/general_text"

                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/line_payment"

            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2.3"
                android:text="Pago   "
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDarkLetterRose"
                android:fontFamily="@font/opensanslight"
                android:textSize="@dimen/general_text"
                android:layout_height="wrap_content"

                />



            <LinearLayout
                android:layout_width="100dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@color/background_rec_inpu"
                android:background="@drawable/rec_edith_dialog"
                android:layout_height="@dimen/height_rec_cuad_input">


                <TextView
                    android:layout_width="wrap_content"
                    android:text="$"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:gravity="center_vertical|left"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical|left"
                    android:fontFamily="@font/opensanslight"
                    android:textSize="@dimen/general_text"
                    android:layout_height="@dimen/height_rec_cuad_input"

                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_rec_cuad_input"
                    android:textColor="@color/colorPrimaryDarkLetterRose"
                    android:inputType="numberDecimal"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:background="@null"
                    android:paddingLeft="4dp"
                    android:paddingRight="8dp"
                    android:text=""
                    android:id="@+id/value_payment"
                    android:fontFamily="@font/opensanslight"
                    android:textSize="@dimen/general_text">

                </EditText>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.7"
                android:layout_marginLeft="4dp"
                android:layout_height="@dimen/height_rec_cuad_input"
                android:background="@drawable/rec_rounded_8"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_payment"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="@dimen/height_rec_cuad_input"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:dropDownVerticalOffset="40dp"
                    android:paddingLeft="0dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.7"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle2"
                            android:orientation="vertical"
                            android:id="@+id/efect"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:textColor="#fff"
                                android:src="@drawable/moneylogo"
                                android:textSize="22sp"
                                android:gravity="center"
                                />


                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/opensanslight"
                            android:textColor="@color/word"
                            android:text="efectivo"
                            android:textSize="16sp"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:layout_height="20dp" />


                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_unselected"
                            android:orientation="horizontal"
                            android:id="@+id/card"
                            android:layout_gravity="center"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:textColor="#fff"
                                android:textSize="22sp"
                                android:src="@drawable/cardlogo"
                                android:gravity="center"
                                />
                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/opensanslight"
                            android:textColor="@color/word"
                            android:text="tarjeta"
                            android:visibility="gone"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:layout_height="20dp" />



                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
             android:layout_marginTop="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rec_edith_dialog"
             android:backgroundTint="@color/background_rec_inpu"
            android:layout_height="@dimen/height_rec_cuad_input">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_rec_cuad_input"
            android:textColor="@color/colorPrimaryDarkLetterRose"
            android:inputType="text"
            android:hint="detalle"
            android:background="@null"
            android:paddingLeft="8dp"
            android:id="@+id/detail"
            android:fontFamily="@font/opensanslight"
            android:textSize="@dimen/general_text">

        </EditText>

     </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="12dp"
                android:id="@+id/cancel"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_school"
                    android:layout_gravity="center"
                    android:paddingLeft="12sp"
                    android:gravity="center"

                    android:paddingRight="12sp"
                    android:textColor="@color/colorbutton"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:text="Cancelar"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="@dimen/height_button"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:id="@+id/ok"
                android:background="@drawable/rec_edith_dialog"
                android:backgroundTint="@color/colorbutton"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="12sp"
                    android:gravity="center"
                    android:paddingRight="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="17sp"
                    android:text="Guardar"
                    />
            </LinearLayout>


        </LinearLayout>

</LinearLayout>



