<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/partes2lei"
        android:orientation="vertical">



        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:id="@+id/toolbar"
            android:elevation="4dp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="54dp"
                android:id="@+id/home"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/returnn"
                    android:id="@+id/returnn"
                    android:layout_marginRight="4dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:fontFamily="@font/opensansregular"
                android:text=" Asistencias"
                android:textSize="@dimen/title_text"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_gravity="right|center_vertical"
                android:id="@+id/refresh"
                android:gravity="right"

                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:padding="16dp"
                    android:src="@drawable/action_refresh"
                    android:layout_marginRight="4dp"
                    />
            </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            style="@style/CategoryTab"
            android:layout_weight="0"

            tabTextColor="#787878"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_tab"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
        >
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="@dimen/height_rec_search"

                android:backgroundTint="@color/background_searchview_r"
                android:background="@drawable/rec_rounded_8"
                android:layout_alignParentBottom="true"
                android:clickable="true" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/delete_viol"
                android:id="@+id/clean_text_search"
                app:tint="@color/colorPrimaryClearLetterRose">

            </ImageView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:id="@+id/line_top_info"
            android:layout_marginLeft="12dp"

            android:layout_marginRight="12dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center|left"
                android:layout_marginRight="8dp"
                android:id="@+id/line_date"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="45dp"
                    android:id="@+id/date_picker"
                    android:layout_gravity="center"

                    android:background="@drawable/bblanco"

                    android:backgroundTint="@color/colorbutton"
                    android:gravity ="center|left"
                    android:paddingTop="2dp"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="LUN"
                        android:id="@+id/dayname"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/num"
                        android:text="12"
                        android:paddingTop="15sp"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:fontFamily="sans-serif"
                        android:layout_gravity="center"

                        />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/date"
                android:layout_gravity="center"
                android:background="@drawable/rec_rounded_8"
                android:layout_height="40dp"
                >

                <TextView
                    android:id="@+id/month"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="wrap_content"
                    android:text="ENE"
                    android:textColor="@color/colorPrimaryLetterRose"
                    android:textSize="16sp"
                     />

                <TextView
                    android:id="@+id/year"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="wrap_content"
                    android:text="2023"
                    android:textColor="@color/colorPrimaryLetterRose"

                    android:textSize="16sp"
                    android:inputType="textCapWords" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cal"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"

                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rec_rounded_8"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/spinner_sub_cat"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:dropDownVerticalOffset="45dp"
                    android:paddingLeft="0dp"
                    android:spinnerMode="dropdown" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/orderBy"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rec_rounded_8"
                android:orientation="horizontal">

              <TextView
                  android:layout_width="wrap_content"
                  android:text="A>B"
                  android:fontFamily="@font/opensansregular"
                  android:layout_gravity="center"
                  android:textColor="@color/colorPrimaryLetterRose"
                  android:gravity="center"
                  android:textSize="20dp"
                  android:layout_height="wrap_content">

              </TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:id="@+id/onlypresents"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rec_rounded_8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/open_eye"
                    app:tint="@color/colorbutton"
                    ></ImageView>


            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >


                <com.example.loaescuela.NonSwipeableViewPager
                    android:id="@+id/viewpager"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </RelativeLayout>


        </FrameLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="65dp"
        android:background="@drawable/bblanco"
        android:backgroundTint="@color/colorbutton"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="45dp"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:id="@+id/fab"
        android:layout_height="65dp">




        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image_button"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:background="@drawable/alum_nuevo"
            android:backgroundTint="@color/white"
            android:layout_height="match_parent"
            />



    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/chip_background"
        android:backgroundTint="@color/back_transp"
        android:orientation="horizontal"
        android:id="@+id/line_cant_presents"
        android:layout_gravity="bottom"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P."
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimaryDarkLetterRose"
            android:textSize="@dimen/big_text"

            />

        <TextView
            android:layout_width="wrap_content"
            android:minWidth="20sp"
            android:paddingLeft="6dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textColor="@color/colorPrimaryDarkLetterRose"
            android:textSize="@dimen/big_text"
            android:id="@+id/cant_presents"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="86dp"
        android:visibility="gone"
        android:layout_marginBottom="36dp"
        android:gravity="center_vertical"
        android:background="@drawable/chip_background"
        android:backgroundTint="@color/back_transp"
        android:orientation="horizontal"
        android:id="@+id/line_cant_alumnos"
        android:layout_gravity="bottom"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A."
            android:textColor="@color/colorPrimaryDarkLetterRose"
            android:textSize="@dimen/big_text"

            />

        <TextView
            android:layout_width="wrap_content"
            android:minWidth="20sp"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingLeft="6dp"
            android:textColor="@color/colorPrimaryDarkLetterRose"
            android:textSize="@dimen/big_text"
            android:id="@+id/cant_students_by_planilla"

            />




    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>

