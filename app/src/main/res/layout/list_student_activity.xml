<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/partes2lei"
        android:id="@+id/listado">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/line_home"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home"
                    android:layout_gravity="center"
                    android:src="@drawable/returnn"
                    android:layout_marginRight="4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/title"
                    android:text="  Datos alumnos"
                    style="@style/TitleStyle"
                    />

            </LinearLayout>



        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@id/toolbar"
            android:layout_marginRight="10dp"
            android:id="@+id/line1"
            >
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="@dimen/height_rec_search"
                android:background="@drawable/rec_find"
                android:backgroundTint="@color/background_searchview_r"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

                android:clickable="true"/>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_weight="2.6"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingLeft="6dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="@dimen/height_rec_search"
                        android:background="@drawable/button_rec"
                        android:id="@+id/orderClientBy"
                        android:text="A-B"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="17sp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="2dp"
                        android:textColor="@color/colorPrimaryDarkLetterRose"
                        android:layout_gravity="center_vertical"

                        />




                    <Button
                        android:layout_width="40dp"
                        android:layout_height="@dimen/height_rec_search"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/button_rec"
                        android:backgroundTint="@color/colorbutton"
                        android:id="@+id/orderClientByCreated"
                        android:text="FE"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="17sp"
                        android:textColor="@color/coloRose_soft_soft"
                        android:layout_gravity="center_vertical"

                        />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_users"
            android:layout_below="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="90dp"
            />




    </RelativeLayout>

    <include layout="@layout/bottom_shet_students" />

    <LinearLayout
        android:layout_width="65dp"
        android:background="@drawable/bblanco"
        android:backgroundTint="@color/colorbutton"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="45dp"
        android:layout_gravity="bottom|right"
        android:id="@+id/add_new_student"
        android:layout_alignParentBottom="true"
        android:layout_height="65dp">


        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image_button"
            android:layout_gravity="center"
            android:padding="10dp"


            android:layout_height="match_parent"
            android:src="@drawable/alum_nuevo"
            app:tint="@color/white" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
